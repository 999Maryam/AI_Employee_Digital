# Facebook Graph API Credentials
# Get these from https://developers.facebook.com/apps

# Facebook App ID
FACEBOOK_APP_ID=your_app_id_here

# Facebook App Secret
FACEBOOK_APP_SECRET=your_app_secret_here

# Facebook Access Token (User or Page Access Token)
# Get from: https://developers.facebook.com/tools/explorer/
FACEBOOK_ACCESS_TOKEN=your_access_token_here

# Facebook Page ID (optional - for posting to page instead of profile)
# Get from: https://www.facebook.com/YOUR_PAGE/about
FACEBOOK_PAGE_ID=your_page_id_here

# Dry Run Mode (true = test mode, false = live posting)
DRY_RUN=true

# Debug Mode
DEBUG=false

# API Version
FACEBOOK_API_VERSION=v19.0
